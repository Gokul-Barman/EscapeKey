<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Members</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #F9D923;
        }

        .container {
            width: 90%;
            max-width: 500px; /* Ensures it looks good on desktops */
            padding: 25px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h2 {
            margin-bottom: 15px;
            color: #333;
        }

        input {
            width: 100%;
            padding: 12px;
            margin-top: 12px;
            border: 2px solid #1565C0;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
        }

        .btn {
            margin-top: 15px;
            width: 100%;
            padding: 12px;
            border: none;
            background: #1565C0;
            color: white;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn:hover { background: #0D47A1; }

        .back-btn {
            margin-top: 15px;
            color: #1565C0;
            cursor: pointer;
            text-decoration: underline;
            font-size: 16px;
        }

        .results {
            margin-top: 20px;
            text-align: left;
            max-height: 300px;
            overflow-y: auto;
            border-top: 2px solid #1565C0;
            padding-top: 10px;
        }

        .results p {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        /* Responsive Design */
        @media (min-width: 768px) {
            .container {
                max-width: 550px;
            }
        }

        @media (min-width: 1024px) {
            .container {
                max-width: 600px;
            }
        }

    </style>
</head>
<body>

    <div class="container">
        <h2>Search for a Member</h2>
        <input type="text" id="search" placeholder="Enter Username or Name" oninput="searchUser()">
        <button class="btn" onclick="searchUser()">Search</button>
        <div class="results" id="results"></div>
        <div class="back-btn" onclick="window.location.href='index.html'">‚Üê Back to Home</div>
    </div>

    <script>
        function searchUser() {
            const query = document.getElementById("search").value.toLowerCase();
            const users = JSON.parse(localStorage.getItem("users") || "[]");
            const resultsContainer = document.getElementById("results");

            resultsContainer.innerHTML = ""; // Clear previous results

            if (query.trim() === "") return; // Don't search if input is empty

            const filteredUsers = users.filter(user =>
                user.username.toLowerCase().includes(query) ||
                user.name.toLowerCase().includes(query)
            );

            if (filteredUsers.length === 0) {
                resultsContainer.innerHTML = "<p>No users found.</p>";
            } else {
                filteredUsers.forEach(user => {
                    resultsContainer.innerHTML += `<p><strong>${user.username}</strong> - ${user.name} | ${user.email}</p>`;
                });
            }
        }

        document.addEventListener("keydown", function(event) {
            if (event.key === "Escape") {
                window.location.href = "index.html";
            }
        });
    </script>

</body>
</html>
